    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-fluid px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="layout"></i></div>
                            FORM
                        </h1>
                        <div class="page-header-subtitle">{{ form.reference }}</div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main page content-->
    <div class="container-fluid px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">{{ form.title }}</div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Batch Number</th>
                        <th>Input Time</th>
                        <th>Input Quantity</th>
                        <th>Input Temp</th>
                        <th>Input Recorded By</th>
                        <th>Output Time</th>
                        <th>Output Quantity</th>
                        <th>Output Temp</th>
                        <th>Output Recorded By</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Date</th>
                        <th>Batch Number</th>
                        <th>Input Time</th>
                        <th>Input Quantity</th>
                        <th>Input Temp</th>
                        <th>Input Recorded By</th>
                        <th>Output Time</th>
                        <th>Output Quantity</th>
                        <th>Output Temp</th>
                        <th>Output Recorded By</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for entry in entries %}
                        <tr>
                            <td>{{ entry.date|date("m/d/Y")}}</td>
                            <td>{{ entry.batchNumber }}</td>
                            <td>{{ entry.inputTime|date('H:i') }}</td>
                            <td>{{ entry.inputQuantity }} KG</td>
                            <td>{{ entry.inputTemperature }} °C</td>
                            <td>{{ entry.inputRecordedBy }}</td>
                            <td>{{ entry.outputTime|date('H:i') }}</td>
                            <td>{{ entry.outputQuantity }} KG</td>
                            <td>{{ entry.outputTemperature }} °C</td>
                            <td>{{ entry.outputRecordedBy }}</td>
                            <td>
                                {#<a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="#"><i data-feather="check"></i></a>#}
                                <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="#"><i data-feather="edit"></i></a>
                                <a class="btn btn-datatable btn-icon btn-transparent-dark" href="#"><i data-feather="trash-2"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {#<div class="container-xl px-4 mt-n10">
